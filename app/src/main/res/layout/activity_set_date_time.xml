<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proj.sm.systemymobilne.activities.SetDateTimeActivity">

    <TextView
        android:id="@+id/txvDateTime"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnSetDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ustaw date"
        app:layout_constraintTop_toBottomOf="@+id/txvDateTime"/>

    <Button
        android:id="@+id/btnSetTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ustaw godzine"
        app:layout_constraintTop_toBottomOf="@+id/btnSetDate"/>

</android.support.constraint.ConstraintLayout>
